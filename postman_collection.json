{
  "info": {
    "name": "Smart City Complaints API",
    "_postman_id": "b7f3a7f2-0000-4000-8000-000000000000",
    "description": "Collection for testing the Smart City Complaints API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "complaintId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "List Complaints",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/complaints",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "complaints"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.test('Response is an array', function () { pm.expect(json).to.be.an('array'); });"
            ]
          }
        }
      ]
      
    },
    {
      "name": "Create Complaint",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Pothole on 5th Street\",\n  \"description\": \"Large pothole near the intersection, causing damage to vehicles.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/complaints",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "complaints"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () { pm.response.to.have.status(201); });",
              "var json = pm.response.json();",
              "pm.test('Response has id', function () { pm.expect(json.id).to.be.a('number'); });",
              "if (json.id) { pm.collectionVariables.set('complaintId', json.id.toString()); }"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "Get Complaint By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/complaints/{{complaintId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "complaints",
            "{{complaintId}}"
          ]
        }
      }
      ,
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "var id = pm.collectionVariables.get('complaintId');",
              "pm.test('Returned id matches requested id', function () { pm.expect(json.id.toString()).to.eql(id); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Complaint (Patch)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"in_progress\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/complaints/{{complaintId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "complaints",
            "{{complaintId}}"
          ]
        }
      }
      ,
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.test('Status updated to in_progress', function () { pm.expect(json.status).to.eql('in_progress'); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete Complaint",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/complaints/{{complaintId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "complaints",
            "{{complaintId}}"
          ]
        }
      }
      ,
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.test('Delete returned success true', function () { pm.expect(json.success).to.be.true; });",
              "pm.collectionVariables.unset('complaintId');"
            ]
          }
        }
      ]
    },
    {
      "name": "Analytics Summary",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/complaints/analytics/summary",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "complaints",
            "analytics",
            "summary"
          ]
        }
      }
      ,
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.test('Has byStatus array', function () { pm.expect(json).to.have.property('byStatus'); pm.expect(json.byStatus).to.be.an('array'); });",
              "pm.test('Has perDay array', function () { pm.expect(json).to.have.property('perDay'); pm.expect(json.perDay).to.be.an('array'); });"
            ]
          }
        }
      ]
    }
  ]
}
